# Local Development Environment
# Copy this to .env.local and adjust as needed

# ===== Database =====
DATABASE_URL="postgresql://nairobi_dev:dev_password_secure_123@localhost:5432/nairobi_sculpt_dev"

# ===== Redis Cache =====
REDIS_URL="redis://localhost:6379"

# ===== API Configuration =====
API_PORT=3000
API_HOST=0.0.0.0
NODE_ENV=development

# ===== JWT Authentication =====
JWT_SECRET="dev_jwt_secret_change_in_production"
JWT_EXPIRES_IN="24h"

# ===== Email Configuration (for notifications) =====
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@nairobi-sculpt.local"

# ===== AWS S3 (for file uploads - optional) =====
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_S3_BUCKET="nairobi-sculpt-dev"

# ===== Frontend Configuration =====
VITE_API_URL="http://localhost:3000/api"
VITE_ENV="development"

# ===== Logging =====
LOG_LEVEL="debug"

# ===== HIPAA & Security =====
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_LEVEL="INFO"
